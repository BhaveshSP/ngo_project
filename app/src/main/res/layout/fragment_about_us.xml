<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AboutUsFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="148dp"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/aboutUsTopCardLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorAccent"
            android:layout_marginHorizontal="24dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="18dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="24dp"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="About \nUdaghosh Welfare Society"
                    android:textColor="@color/cardTextColor"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginStart="12dp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/aboutUsActivitiesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            app:layout_constraintTop_toBottomOf="@id/aboutUsTopCardLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="28dp"
                app:srcCompat="@drawable/icon_activities"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activities"
                android:layout_marginStart="12dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/cardTextColor"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/aboutUsActivitiesText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="13sp"
            android:gravity="start"
            android:textColor="@color/cardTextColor"
            app:layout_constraintTop_toBottomOf="@id/aboutUsActivitiesLayout"
            android:layout_marginHorizontal="32dp"
            tools:text="Temp Text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <LinearLayout
            android:id="@+id/aboutUsNeedLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            app:layout_constraintTop_toBottomOf="@id/aboutUsActivitiesText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="28dp"
                app:srcCompat="@drawable/icon_need"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Need"
                android:layout_marginStart="12dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/cardTextColor"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/aboutUsNeedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="13sp"
            android:gravity="start"
            android:textColor="@color/cardTextColor"
            app:layout_constraintTop_toBottomOf="@id/aboutUsNeedLayout"
            android:layout_marginHorizontal="32dp"
            tools:text="Temp Text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />


        <LinearLayout
            android:id="@+id/aboutUsLongTermImpactLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            app:layout_constraintTop_toBottomOf="@id/aboutUsNeedText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="28dp"
                app:srcCompat="@drawable/icon_impact"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Long Term Impact"
                android:layout_marginStart="12dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/cardTextColor"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/aboutUsLongTermImpactText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="13sp"
            android:gravity="start"
            android:textColor="@color/cardTextColor"
            app:layout_constraintTop_toBottomOf="@id/aboutUsLongTermImpactLayout"
            android:layout_marginHorizontal="32dp"
            tools:text="Temp Text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />


        <LinearLayout
            android:id="@+id/aboutUsSummaryLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            app:layout_constraintTop_toBottomOf="@id/aboutUsLongTermImpactText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="28dp"
                app:srcCompat="@drawable/icon_summary"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Summary"
                android:layout_marginStart="12dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/cardTextColor"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/aboutUsSummaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="13sp"
            android:gravity="start"
            android:textColor="@color/cardTextColor"
            app:layout_constraintTop_toBottomOf="@id/aboutUsSummaryLayout"
            android:layout_marginHorizontal="32dp"
            tools:text="Temp Text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>