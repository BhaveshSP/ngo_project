<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signInSignUp.VerificationActivity">

    <TextView
        android:id="@+id/verifyTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:text="Verification"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="32sp"
        />

    <EditText
        android:id="@+id/verifyPhoneNumberText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/verifyTitleText"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="48dp"
        android:hint="Enter Phone Number"
        android:textColor="@color/cardTextColor"
        android:textColorHint="@color/grey"
        android:paddingHorizontal="12dp"
        android:paddingVertical="12dp"
        app:layout_constraintVertical_bias="0.3"
        android:inputType="phone"
        />
    <Button
        android:id="@+id/verifyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send OTP"
        app:layout_constraintTop_toBottomOf="@id/verifyPhoneNumberText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:textAllCaps="false"
        />

    <ProgressBar
        android:id="@+id/verifyProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        />

    <EditText
        android:id="@+id/verificationCodeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:hint="Enter Verification Code"
        android:textColor="@color/cardTextColor"
        android:textColorHint="@color/grey"
        android:paddingHorizontal="12dp"
        android:paddingVertical="12dp"
        app:layout_constraintVertical_bias="0.3"
        android:layout_marginHorizontal="48dp"
        app:layout_constraintTop_toBottomOf="@id/verifyTitleText"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        />





</androidx.constraintlayout.widget.ConstraintLayout>